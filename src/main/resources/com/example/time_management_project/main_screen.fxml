<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane prefWidth="250.0" vgap="5.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.time_management_project.mainscreenController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
    <children>
        <Label fx:id="welcomeLabel" text="Welcome!" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
            <GridPane.margin>
                <Insets />
            </GridPane.margin>
        </Label>
        <Label fx:id="nameLabel" text="Name: Not Found" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
        <Label fx:id="positionLabel" text="Position: Not Found" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
        <Label fx:id="wageLabel" text="Wage: Not Found" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
        <Button fx:id="buttonClockin" mnemonicParsing="false" onAction="#clockinPressed" text="Clock In" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.valignment="CENTER" />
        <Label fx:id="clockInTimeLabel" text="Clock In Time: Not Set" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="4" />
        <Button fx:id="buttonClockout" mnemonicParsing="false" onAction="#clockoutPressed" text="Clock Out" GridPane.halignment="CENTER" GridPane.rowIndex="7" GridPane.valignment="CENTER" />
        <Label fx:id="clockOutTimeLabel" text="Clock Out Time: Not Set" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="6" />
        <Label fx:id="currentPayLabel" text="Current Week's Pay: Not Found" GridPane.halignment="CENTER" GridPane.rowIndex="8" />
        <Label fx:id="totalPayLabel" text="Total Pay: Not Found" GridPane.halignment="CENTER" GridPane.rowIndex="9" />
        <Button fx:id="buttonRTO" mnemonicParsing="false" onAction="#timeoffPressed" text="Request Time Off" GridPane.halignment="CENTER" GridPane.rowIndex="10" GridPane.valignment="CENTER" />
    </children>
    <padding>
        <Insets bottom="14.0" left="14.0" right="14.0" top="14.0" />
    </padding>
</GridPane>
